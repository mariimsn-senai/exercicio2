@model MCBONALDSMVC.ViewMoldels.PedidoViewModels
<main>
    
        <h2>Pede aí, jovem!</h2>
        <form method="POST" action='@Url.Action("Registrar","Pedido")'>
            <div>
                <label for="nome">Nome Completo</label>
                <br />
                <input id="nome" type="text" maxlength="20" minlength="3" name="nome"/>
            </div>

            <div>
                <label for="endereco">Endereço</label>
                <br />
                <input id="endereco" type="text" maxlength="20" minlength="3" name="endereco"/>
            </div>

            <div>
                <label for="telefone">Telefone para contato</label>
                <br />
                <input id="telefone" type="text" placeholder="11 12345 6789" name="telefone"/>
            </div>

            <div>
                <label for="email">E-mail</label>
                <br />
                <input id="email" type="email" name="email"/>
            </div>

            <div class="double-field">
                <div>
                    <label for="hamburguer">Hamburguer</label>
                    <select id="hamburguer" name="hamburguer" required> 
                        <option value="" disabled selected>Selecione</option>
                        @foreach (var hamburguer in Model.hamburgueres)
                        {
                            <option value=@hamburguer.Nome>@hamburguer.Nome por @hamburguer.Preco

                            </option>
                        }
                    </select>
                </div>
                <div>
                    <label for="shake">Shake</label>
                    <select id="shake" name="shake">
                        <option value="" disabled selected>Selecione</option>
                        @foreach (var shake in Model.shake)
                        {
                            <option value=@shake.Nome>@shake.Nome por @shake.Preco

                            </option>
                        }
                    </select>
                </div>
            </div>
            <input type="submit" value="Finalizar pedido!" />
        </form>

    </main>